<div class="tabbable search-tabs">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#one" data-toggle="tab" class="basic">Basic Search</a></li>
    <li><a href="#twee" data-toggle="tab" class="advanced">Advanced Search</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="one">
      <h2>Basic Search <i class="fa fa-search"></i></h2>
      <div class="tabbable">
        <div class="form">
          <%= bootstrap_form_tag url: "/events", method: "get" do |f| %>
          <%= f.text_field :artist_name, placeholder: "Artist", class: "connector" %>
          <%= f.text_field :location, placeholder: "Where? city/state/address", class: "connector" %>
          <%#= f.text_field :location, placeholder: "ip:119.23.23.23", class: "connector" %>
          <%= f.submit "Filter", class: "btn btn-default connector" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="tab-pane" id="twee">
      <h2>Advanced Search <i class="fa fa-search"></i></h2>
      <div class="tabbable">
        <div class="form advancedSearch">
          <%= bootstrap_form_tag url: "/events", method: "get", html: {id: "advancedSearch"} do |f| %>
            <%= f.text_field :artist_name, placeholder: "Artist", class: "connector" %>
            <%= f.text_field :location, placeholder: "Where? City/State/Address", class: "connector" %>
            <%= f.text_field :min_date, placeholder: "2015-MM-DD", class: "connector",  presence: true %>
            <%= f.text_field :max_date, placeholder: "2015-MM-DD", class: "connector",  presence: true%>
            <%= f.submit "Filter", class: "btn btn-default connector", id: "advancedSubmit" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_tag do %>
$(document).ready(function() {
  $(function($){
    $("#max_date").mask("2015-99-99");
    $("#min_date").mask("2015-99-99");
  });

  $("#advancedSubmit").on("click", function() {
    if($(".advancedSearch #location").val() === "") {
      alert("Please enter a location to search by date.");
      return false;
    }
  })
});
<% end %>
